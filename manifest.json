{
    "name": "Chrome Lastfm Scrobbler",
    "description": "Chrome Lastfm Scrobbler",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html",
        "default_icon": "logo192.png"
    },
    "commands": {
        "_execute_action": {
          "suggested_key": {
            "default": "Ctrl+Shift+F",
            "mac": "MacCtrl+Shift+F"
          },
          "description": "Opens index.html"
        }
    },
    "permissions": [
        "history",
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "https://music.youtube.com/*",
        "http://ws.audioscrobbler.com/"
    ],
    "background": {
      "service_worker": "background-wrapper.js"
    },
    "content_scripts": [
        {
          "matches": ["*://music.youtube.com/*"],
          "js": ["contentScript.js"],
          "run_at": "document_idle",
          "all_frames": true
        }
    ],
    "web_accessible_resources": [
      {
        "resources": ["extScript.js"],
        "matches": ["*://music.youtube.com/*"]
      }
    ]
}